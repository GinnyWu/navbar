<script type="text/javascript">
 	$(document).ready(function(){
 		var num;
 		 $('.navbar>li[id]').hover(function(){
 		 	 var Obj = $(this).attr('id');
        num = Obj.substring(6, Obj.length);
        $('#box-'+num).slideDown(400);
    });

       /*  $("#index-1").mouseover(function(){
         	$("#box-1").slideDown(400);
        }); */
         $(".nav").mouseleave(function(){
         	$('#box-'+num).slideUp(200);
         });
       
 	});

 </script>
